<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.berita.BeritaActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorBackgroundDefault"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_berita_judul"
            style="@style/TextHeaderBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default"
            android:textAlignment="center"
            tools:text="Ini adalah judul berita" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_berita_post_by"
                style="@style/TextSmallBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="UKM English Club" />

            <TextView
                android:id="@+id/tv_berita_tanggal"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                tools:text="20 Des 2019" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_berita"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="@dimen/margin_default"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_berita_deskripsi"
            style="@style/TextDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default"
            android:justificationMode="inter_word"
            tools:text="Ini adalah deskripsi dari berita saat itu." />
    </LinearLayout>


</androidx.core.widget.NestedScrollView>