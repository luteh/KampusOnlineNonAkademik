<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextInputLayoutForm" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="errorTextAppearance">@style/TextErrorAppearance</item>
        <item name="hintTextAppearance">@style/TextHintAppearance</item>
    </style>

    <style name="EditTextForm" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/blackTransparent</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColorHighlight">@color/blackTransparent</item>
        <item name="android:textSize">@dimen/text_small_14</item>
    </style>

    <style name="DefaultMargins">
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
    </style>

    <style name="InputLayoutWithMargin" parent="TextInputLayoutForm">
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
    </style>

    <style name="SpinnerWithMargin" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
    </style>

    <style name="TextErrorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">10sp</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="TextHintAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!--Spots progress dialog-->
    <style name="CustomSpotsDialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <!--<item name="DialogTitleText">Updatingâ€¦</item>-->
        <item name="DialogSpotColor">@color/colorAccent</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <!--TextView Widget-->
    <style name="TextHeaderBold" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorDefaultText</item>
        <item name="android:textSize">@dimen/text_large_</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:shadowColor">@color/colorAccent</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>-->
    </style>

    <style name="TextMediumBold" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorDefaultText</item>
        <item name="android:textSize">@dimen/text_default_16</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:shadowColor">@color/colorAccent</item>-->
        <!--<item name="android:shadowDx">5</item>-->
        <!--<item name="android:shadowDy">5</item>-->
        <!--<item name="android:shadowRadius">5</item>-->
    </style>

    <style name="TextDefaultBold" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorDefaultText</item>
        <item name="android:textSize">@dimen/text_small_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDefault" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorDefaultText</item>
        <item name="android:textSize">@dimen/text_small_14</item>
    </style>

    <style name="TextSmall" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorSmallText</item>
        <item name="android:textSize">@dimen/text_small_12</item>
    </style>

    <style name="TextDefaultGreen" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorGreenText</item>
        <item name="android:textSize">@dimen/text_small_14</item>
    </style>

    <style name="TextDefaultRed" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">@dimen/text_small_14</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="EditTextNotEditable" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorDefaultText</item>
        <item name="android:textColorHint">@color/colorSmallText</item>
    </style>

    <style name="PopupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <!--<item name="android:popupBackground">@drawable/dropdown_bg</item>-->
        <item name="android:itemPadding">25dp</item>
        <item name="android:listPreferredItemHeightSmall">35dp</item>


    </style>

</resources>
